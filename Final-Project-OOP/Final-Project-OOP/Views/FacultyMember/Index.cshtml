@model Final_Project_OOP.Models.FacultyMember

@{
    ViewBag.Title = "Faculty Member Dashboard";
}

<h2>@ViewBag.Title</h2>

<!-- Form for creating an assignment -->
<form asp-action="CreateAssignment" method="post">
    <input type="text" name="CourseId" placeholder="Course ID" required />
    <input type="text" name="Subject" placeholder="Subject" required />
    <input type="text" name="Name" placeholder="Assignment Name" required />
    <textarea name="Description" placeholder="Description"></textarea>
    <input type="datetime-local" name="Deadline" required />
    <button type="submit">Create Assignment</button>
</form>

<!-- Form for grading an assignment (simplified version) -->
<form asp-action="GradeAssignment" method="post">
    <input type="text" name="AssignmentId" placeholder="Assignment ID" required />
    <input type="text" name="StudentId" placeholder="Student ID" required />
    <input type="number" name="Grade" step="0.1" placeholder="Grade" required />
    <button type="submit">Grade Student</button>
</form>
