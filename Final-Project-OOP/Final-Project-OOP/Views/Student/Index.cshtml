@model Final_Project_OOP.Models.Student // Specify the correct namespace and model name

<h1>Welcome, @Model.FirstName @Model.LastName</h1>

<h2>Your Information</h2>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Address:</strong> @Model.Address</p>
<!-- Add more properties as needed -->
@if (Model.Assignments != null && Model.Assignments.Any())
{
    <h2>Your Assignments</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Deadline</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model.Assignments)
            {
                <tr>
                    <td>@assignment.Description</td>
                    <td>@assignment.Deadline.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No assignments found.</p>
}

